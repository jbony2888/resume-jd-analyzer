{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceMap",
  "description": "LLM-assisted evidence mapping from resume to frozen requirements",
  "type": "object",
  "required": ["role_id", "jd_hash", "resume_hash", "requirements_version", "prompt_version", "model_id", "matches"],
  "properties": {
    "role_id": { "type": "string" },
    "jd_hash": { "type": "string" },
    "resume_hash": { "type": "string" },
    "requirements_version": { "type": "string" },
    "prompt_version": { "type": "string" },
    "model_id": { "type": "string" },
    "run_id": { "type": "string" },
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["requirement_id", "matched", "evidence"],
        "properties": {
          "requirement_id": { "type": "string" },
          "requirement_key": { "type": "string" },
          "matched": { "type": "boolean" },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["quote"],
              "properties": {
                "quote": { "type": "string" },
                "resume_section": { "type": ["string", "null"] },
                "start_offset": { "type": ["integer", "null"] },
                "end_offset": { "type": ["integer", "null"] }
              }
            }
          },
          "confidence": { "type": "string", "enum": ["high", "medium", "low"] },
          "notes": { "type": ["string", "null"] }
        }
      }
    }
  }
}
